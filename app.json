{
  "expo": {
    "name": "fich-ar",
    "slug": "fich-ar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSUserNotificationUsageDescription": "Permitir a $(PRODUCT_NAME) enviar recordatorios de fichada."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "softwareKeyboardLayoutMode": "pan"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.fichar.mobile",
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir a $(PRODUCT_NAME) acceder a tu ubicación para registrar fichadas con precisión.",
          "isIosBackgroundLocationEnabled": true,
          "locationUsage": "Permitir a $(PRODUCT_NAME) acceder a tu ubicación mientras usás la app.",
          "locationAlwaysUsage": "Permitir a $(PRODUCT_NAME) acceder a tu ubicación incluso en segundo plano para validar fichadas."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff"
        }
      ]
    ]
  }
}
